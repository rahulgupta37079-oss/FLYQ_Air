# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key-here

# Payment Gateway (PayU)
PAYU_MERCHANT_KEY=your-merchant-key
PAYU_SALT=your-salt-key
PAYU_MODE=test  # or 'production'

# SMS Service (Twilio - Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Carrier APIs (Optional - for production use)
# FedEx
FEDEX_API_KEY=your-fedex-api-key
FEDEX_SECRET_KEY=your-fedex-secret-key

# Delhivery (Popular in India)
DELHIVERY_API_KEY=your-delhivery-api-key

# DHL
DHL_API_KEY=your-dhl-api-key

# Blue Dart  
BLUEDART_API_KEY=your-bluedart-api-key

# AWS SNS (Alternative SMS provider - Not recommended for Cloudflare Workers)
# AWS_SNS_REGION=ap-south-1
# AWS_SNS_ACCESS_KEY=your-access-key
# AWS_SNS_SECRET_KEY=your-secret-key
